<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="auto" Width="200" >
            <Label Content="Логин" HorizontalAlignment="Stretch"  VerticalAlignment="Top" />
            <TextBox x:Name="Login_tb" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" />
            <Label Content="Пароль" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <PasswordBox x:Name="Password_tb" HorizontalAlignment="Stretch"  VerticalAlignment="Top" />
            <Button Content="Войти" HorizontalAlignment="Stretch" Margin="0,15" VerticalAlignment="Top" Click="Button_Click"/>
            <Label x:Name="Error_lbl" Foreground="Red" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
