        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="MenuView" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Добавить предпочитаемые предметы" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0, 0, 0, 20" Click="Button_Click"/>
            <Button Content="Показать карту обучения" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
